{
    "index": {
        "max_ngram_diff": 64
    },
    "analysis": {
        "filter": {
            "trigrams": {
                "type": "ngram",
                "min_gram": 3,
                "max_gram": 3
            },
            "shingles": {
                "type": "shingle",
                "min_shingle_size": 2,
                "max_shingle_size": 3,
                "output_unigrams": false
            },
            "stopwords": {
                "type": "stop",
                "stopwords": []
            },
            "synonyms": {
                "type": "synonym",
                "synonyms": []
            },
            "stemmer": {
                "type": "stemmer",
                "language": "greek"
            }
        },
        "analyzer": {
            "text": {
                "type": "custom",
                "char_filter": ["icu_normalizer"],
                "tokenizer": "icu_tokenizer",
                "filter": ["icu_folding", "lowercase"]
            },
            "shingle": {
                "type": "custom",
                "char_filter": ["icu_normalizer"],
                "tokenizer": "icu_tokenizer",
                "filter": ["icu_folding", "lowercase", "shingles"]
            },
            "trigram": {
                "type": "custom",
                "char_filter": ["icu_normalizer"],
                "tokenizer": "icu_tokenizer",
                "filter": ["icu_folding", "lowercase", "trigrams"]
            },
            "reverse": {
                "type": "custom",
                "char_filter": ["icu_normalizer"],
                "tokenizer": "icu_tokenizer",
                "filter": ["icu_folding", "lowercase", "reverse"]
            }
        }
    }
}